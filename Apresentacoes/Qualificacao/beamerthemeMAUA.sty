    \pgfusepath{fill}
    %\MakeBlueBackgroud

    % Logo
   % \pgftext[at=\pgfpoint{.009\paperwidth}{-.60\paperheight},left,base]{\pgfuseimage{main-logo}}

\end{pgfpicture}%
}

